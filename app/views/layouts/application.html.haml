!!! Strict
%html
  %head
    %title
      = yield(:title).blank? ? controller_name.humanize : yield(:title)
      \- RMU
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = stylesheet_link_tag 'buttons.css', 'smoothness/jquery-ui.css'
    = javascript_include_tag 'jquery-1.4.2.js', 'jquery.scrollTo', 
                             'jquery.infieldlabel.min.js', 'jquery.jeditable.js',
                             'jquery-ui', 'showdown', 'nested_form', 
                             'application', 'rails', 'dropdownmenu', 'sidebarmenu', 'timezone'
    = csrf_meta_tag
    
    = yield(:header_bottom)

  %body          
    #wrap
      #header
        .centered
          %h1 Ruby Mendicant University

          - if current_user
            = render :partial => "shared/user"

      = render :partial => "shared/nav"
      = render :partial => "shared/flash", :locals => {:flash => flash}
      #content= yield
      .clear