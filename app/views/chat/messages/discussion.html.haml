- title "#{@discussion.name} - #{@discussion.channel.name}"

%h1= "#{@discussion.name} - #{@discussion.channel.name}"

%p= link_to("More discussions on #{@discussion.channel.name}", chat_discussions_path(:channel => @discussion.channel.name))

%ul.meetings
  - @meetings.each_with_index do |meeting, index|
    %li
      %h3= meeting_time_range(meeting)
      %table.messages
        - meeting.messages.each do |message|
          = render :partial => "display", :locals => {:message => message}

