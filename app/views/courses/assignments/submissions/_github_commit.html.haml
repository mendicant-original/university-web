.activity
  #github-header.header
    = user_icon(activity.user)
    = activity.user.name
    .details
      - if activity.description.length > 80
        = activity.description[0..80] + " ..."
      - else
        = activity.description
    .on
      = time_ago_in_words activity.created_at
      ago
  .content{:style => "display:none;"}
    - unless activity.description[/updated repository to/]
      = link_to "View commit #{github_commit_id(activity, true)} on github",
        github_commit_link(activity),
        :target => "_blank"