%h1.form-header Courses

%p.prompt
  = link_to "Create New Course", new_admin_course_path

%table.admin
  %thead
    %tr
      %th Name
      %th Channel
      %th
      %th 
  %tbody
    - @courses.each do |course|
      %tr{:class => cycle('even','odd')}
        %td= link_to course.name, edit_admin_course_path(course)
        %td= course.channel.name if course.channel
        %td= link_to "Assignments", admin_course_assignments_path(course)
        %td.action= link_to("Destroy", admin_course_path(course), :confirm => "Are you sure you wish to delete this course?", :method => 'DELETE', :class => "delete")
