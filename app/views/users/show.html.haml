- title @user.name.blank? ? @user.email : @user.name

.profile
  %h1
    = image_tag @user.gravatar_url(50), :alt => ""
    = @user.name
    %p
      = mail_to @user.email
  #social-presence
    - unless @user.github_account_name.blank?
      %p
        Github:
        = github_account_link @user.github_account_name

    - unless @user.twitter_account_name.blank?
      %p
        Twitter:
        = twitter_account_link @user.twitter_account_name
%hr.clear

- if current_user == @user
  %p= link_to "Edit my personal information", edit_user_path(@user)


#github-repositories
  %h2= "Github repos (#{@user.github_repositories.size})"

  %ul
    - @user.github_repositories.each do |repo|
      %li
        %h3= link_to repo.name , repo.url

        .additional-info
          %p= "Language: #{repo.language}" unless repo.language.blank?
          %p
            = image_tag("github-watcher-icon.png", {:width => 16, :height => 16 , :alt => "Watchers", :title => "Watchers"})
            = repo.watchers
            = image_tag("github-fork-icon.png", :alt => "Forks", :title => "Forks", :width => 16, :height => 16)
            = repo.forks
        %p.clear= repo.description
    -

- content_for :body_end  do
  = javascript_include_tag "uw.users"

  :javascript
    $(document).ready(function() {
      UW.Users.init();
    });
-
